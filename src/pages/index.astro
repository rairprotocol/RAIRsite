---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'RAIRprotocol enables the creation of scalable Dapps through an open token licensing model',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Whitepaper',
        href: 'https://github.com/rairprotocol/RAIRdocs/tree/main',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      Open Infrastructure for <span class="hidden xl:inline">creating</span>
      <span class="text-accent dark:text-white highlight"> Dapps </span>that scale
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">RAIRprotocol</span> enables the creation of scalable Dapps through an open token licensing model.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Build</span>
       independent NFT marketplace and DRM infrastructure with all relevant smart contracting, account creation, and scalable offchain cloud management logic.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Infrastructure"
    title="What you get with RAIRprotocol"
    subtitle="Complete Dapp Infrastructure"
    items={[
      {
        title: 'RAIRsolidity',
        description:
          'Granular onchain NFT minting, royalty, resale, fungible token credit, and marketplace logic via ERC2535 upgradeable diamond multi-proxy contracts.',
        icon: 'tabler:currency-ethereum',
      },
      {
        title: 'RAIRnode',
        description:
          'Backend to create your own modular API endpoints and offchain infrastructure.',
        icon: 'tabler:database-cog',
      },
      {
        title: 'RAIRfrontend',
        description:
          'Deploy customizable mobile first NFT marketplace frontends using modular REACT + Typescript framework. ',
        icon: 'tabler:device-tablet',
      },
      {
        title: 'RAIRmedia',
        description:
          'DRM protect content with a full FFmpeg encoder/transcoder.',
        icon: 'tabler:badge-4k',
      },
      {
        title: 'RAIRsync',
        description:
          "Specify all smart contract addresses to sync via Alchemy syncing engine. ",
        icon: 'tabler:refresh',
      },
      {
        title: 'RAIRinfra',
        description:
          'RAIR is committed to fully open sourcing all aspects of our knowledge base. This includes: Terraform scripts, CI/CD pipeline, Kubernetes configurations.',
        icon: 'tabler:building-bridge',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Fully Open Source"
    title="Innovative Licensing Model"
    items={[
      {
        title: 'Apache2.0 Reimagined',
        description:
          'Adapting Apache2.0 for the Web3 Era. Public Changelogs. Orginal License files',
      },
      {
        title: 'License.md NFTs',
        description:
          'Provenance inside license.md proving a valid open source license onchain',
      },
      {
        title: 'Fair Distribution',
        description:
          'Free for developers, graduated scale for enterprise based on ARR.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">DAO Governance of License distribution</h3>
       Stewards the RAIR open codebase into the future with a sustainable decentralized funding mechanism
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: '1,000,000,000 RAIR',
        description: `Designed to reward active network development`,
      },
      {
        title: 'Thoughtful distribution',
        description:
          'Funding code audits, developer grants, CEX listings, strategic partnerships, all with eleganty designed lockup periods.',
      },
      {
        title: 'Bonding curves',
        description:
          "To balance the needs of early adopters and later participants through emissions curve release schedule.",
      },
      {
        title: 'DAO Governance',
        description:
